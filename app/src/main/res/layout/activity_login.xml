<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity">
        <include
            android:id="@+id/toolbar"
            layout="@layout/common_toolbar"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_login">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:padding="6dp"
                android:text="@string/signup_login_title" />
            <EditText
                android:text="muang59@example.com"
                android:textSize="@dimen/font_size_small"
                android:id="@+id/et_id"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:hint="@string/login_id_hint"
                android:padding="12dp"
                android:layout_marginBottom="24dp"
                android:maxLines="1"
                android:layout_gravity="center"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:inputType="textEmailAddress" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:padding="6dp"
                android:text="@string/signup_pw_title" />
            <EditText
                android:text="muang59!@"
                android:textSize="@dimen/font_size_small"
                android:id="@+id/et_password"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:padding="12dp"
                android:inputType="textPassword"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:hint="@string/login_pw_hint"
                android:maxLines="1" />
            <CheckBox
                android:id="@+id/cb_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_auto_login"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="end" />
            <TextView
                android:id="@+id/tv_enter_signup"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/login_enter_signup"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/login_signup" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/allow_button"
            android:text="로 그 인"
            android:gravity="center"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/white"
            android:clickable="true"
            android:focusable="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>