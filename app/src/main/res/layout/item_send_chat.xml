<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:id="@+id/lo_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/chat_layout_padding">

        <TextView
            android:id="@+id/tv_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/chat_contents_max_width"
            android:textSize="@dimen/font_size_smaller"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/chat_contents_padding"
            android:layout_marginEnd="@dimen/chat_contents_margin_end"
            tools:text="나" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_time_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginEnd="6dp"
                android:textSize="@dimen/font_size_smallest"
                tools:text="오후 1:30"/>

            <TextView
                android:id="@+id/tv_contents"
                android:textSize="@dimen/font_size_small"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/chat_contents_max_width"
                android:layout_height="wrap_content"
                android:padding="@dimen/chat_contents_padding"
                android:textColor="@color/dark_gray"
                android:background="@drawable/bg_chat"
                tools:text="How are you? Who are" />
        </LinearLayout>
    </LinearLayout>
</layout>